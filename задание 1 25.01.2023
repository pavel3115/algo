def test_color_1():
    c = Car(color='white',
            engine_power=90,
            max_fuel=50,
            consumption=9.3,
            now_fuel=0)
    assert c.get_color() == 'white'

test_color_1()

def test_color_2():
    c = Car(color='white',
            engine_power=90,
            max_fuel=50,
            consumption=9.3,
            now_fuel=0)
    assert c.get_color() == 'white'
    c.set_color('red')

test_color_2()

def test_color_3():
    c = Car(color='white',
